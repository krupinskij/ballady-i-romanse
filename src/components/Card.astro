---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a href={href}>
  <div>{title}</div>
</a>

<style lang="scss">
  a {
    border: 6px double var(--border-color-default);
    width: 288px;
    height: 128px;

    display: flex;
    justify-content: center;
    align-items: center;

    & > div {
      font: var(--font-lg);
      text-align: center;
    }
  }
</style>
