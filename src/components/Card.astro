---
interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a href={href}>
  <div>{title}</div>
</a>

<style>
  a {
    border: 6px double gray;
    width: 288px;
    height: 128px;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  a > div {
    font-size: 1.5rem;
    line-height: 2rem;
    text-align: center;
  }
</style>
